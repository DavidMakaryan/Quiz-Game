<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ujextxunkar"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/nkar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="-60dp"
        android:layout_marginEnd="60dp"
        android:adjustViewBounds="true"
        android:src="@drawable/icon1" />

    <TextView
        android:id="@+id/chooseTopic"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nkar2"
        android:textColor="#99FFFFFF"
        android:text="Выберите Викторину" />
<!-- НАЧАЛО первой линии викторин-->
    <LinearLayout
        android:id="@+id/line_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/chooseTopic"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:weightSum="2"
        >
<!--        //Начало Футбол-->
        <LinearLayout
            android:id="@+id/footballLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/round_back_white10">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/footballfoto"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Football"
                android:textColor="#CC000000"
                android:textSize="20sp"
                android:textStyle="bold"/>

        </LinearLayout>
<!--        //Конец Футбол-->

<!--        //Начало Страны-->

        <LinearLayout
            android:id="@+id/countriesLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/round_back_white10">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/globus"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Countries"
                android:textColor="#CC000000"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>
<!--        //Конец Страны-->

    </LinearLayout>
<!-- КОНЕЦ первой линии викторин-->

<!-- НАЧАЛО вторая линии викторин-->

    <LinearLayout
        android:id="@+id/line_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/line_1"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:weightSum="2"
        >
<!--        // Начало Математика-->
        <LinearLayout
            android:id="@+id/mathsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/round_back_white10">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/kalkulytor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Maths"
                android:textColor="#CC000000"
                android:textSize="20sp"
                android:textStyle="bold"/>

        </LinearLayout>
<!--        // Конец Математика-->

<!--        // Начало Факты-->
        <LinearLayout
            android:id="@+id/factsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/round_back_white10">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/fakti1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Facts"
                android:textColor="#CC000000"
                android:textSize="20sp"
                android:textStyle="bold"/>

        </LinearLayout>
<!--        // Конец Факты-->

    </LinearLayout>
<!-- КОНЕЦ вторая линии викторин-->

<!-- НАЧАЛО кнопка начать  викторину-->

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/startQuizBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Начать Викторину"
        android:layout_below="@id/line_2"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="16sp"
        android:background="@drawable/round_back_green20"
        />

<!-- КОНЕЦ кнопка начать  викторину-->

</RelativeLayout>